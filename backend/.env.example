# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/flat_price_prediction
# For MongoDB Atlas (Cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/flat_price_prediction

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this
JWT_REFRESH_EXPIRE=30d

# Admin Default Credentials (Change after first login)
ADMIN_EMAIL=admin@flatprice.com
ADMIN_PASSWORD=Admin@123456

# Python AI Model Configuration
PYTHON_PATH=python
MODEL_PATH=../models
PREDICT_SCRIPT_PATH=../src/predict.py

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.csv

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
